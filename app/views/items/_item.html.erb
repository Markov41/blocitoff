<% @user.items.each do |item| %>
  <div class="media">
    <div class="media-body">
      <h4 class="media-heading">
        <%= item.name %>
        <%= link_to "Completed", user_items_path(current_user, item), method: :delete, remote: true, class: 'glyphicon glyphicon-ok' %>
      </h4>
      <small>
           <%= "#{distance_of_time_in_words(Time.now, item.created_at + 7.days)} before deletion" %>
      </small>
    </div>
  </div>
<% end %>